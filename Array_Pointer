#include<iostream>
using namespace std;

int main()
{
	int *p,n;
	
	cout<<"Enter number of array elements:"<<endl;
    cin>>n;
    int arr[n];

    p=arr;

    cout<<"Enter elements:"<<endl;
	for(int i=0;i<n;i++)
	{
		cin>>*p; 
		p++;
	}

	cout<<"You entered: "<<endl;

	p=arr;

	for(int j=0;j<n;j++)
	{
		cout<<*p<<endl;
		p++;
	}
}
