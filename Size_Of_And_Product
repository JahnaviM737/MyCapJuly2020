//Assignment 2: Finding product of two user entered numbers
#include<iostream>
using namespace std;
int main()
{
	cout<<"Enter two numbers:";
	float a,b,product;
	cin>>a>>b;
	product=a*b;
	cout<<"Product="<<product;

}

